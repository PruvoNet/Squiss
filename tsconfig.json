{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "checkJs": false,
    "allowJs": false,
    "strict": true,
    "baseUrl": "packages",
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "resolveJsonModule": false,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noImplicitUseStrict": false,
    "declarationMap": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "mocha-setup.ts",
    "node_modules"
  ],
  "paths": {
    "@squiss/*": [
      "./packages/*/src"
    ]
  }
}
